# ===================
# REQUIRED
# ===================

# Supabase (get from supabase.com dashboard)
NEXT_PUBLIC_SUPABASE_URL=https://xxxxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJxxxxx
SUPABASE_SERVICE_ROLE_KEY=eyJxxxxx

# Trigger.dev (get from trigger.dev dashboard)
TRIGGER_SECRET_KEY=tr_dev_xxxxx

# Anthropic Claude API (get from console.anthropic.com)
ANTHROPIC_API_KEY=sk-ant-xxxxx

# Telegram Bot (create via @BotFather)
TELEGRAM_BOT_TOKEN=1234567890:ABCxxxxx
TELEGRAM_CHAT_ID=-1001234567890

# ===================
# OPTIONAL
# ===================

# CoinGecko Pro API (free tier works fine)
COINGECKO_API_KEY=

# CryptoPanic (for news)
CRYPTOPANIC_API_KEY=

# ===================
# CONFIGURATION
# ===================

# Minimum price change to trigger alert (0.10 = 10%)
PRICE_THRESHOLD=0.10

# Volume spike multiplier (2.0 = 2x average)
VOLUME_THRESHOLD=2.0

# Maximum coins to track
MAX_COINS=1000

# Maximum research jobs per day (controls Claude API costs)
MAX_RESEARCH_PER_DAY=20
